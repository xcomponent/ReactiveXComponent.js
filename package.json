{
  "name": "reactivexcomponent.js",
  "version": "2.0.0",
  "description": "Javascript reactive client API for XComponent",
  "directories": {
    "test": "test",
    "lib": "./lib"
  },
  "scripts": {
    "dev": "webpack -d --watch",
    "build": "webpack -p --define process.env.NODE_ENV='\"production\"' --progress --colors",
    "test": "jest --coverage ",
    "lint": "tslint src/**/*.ts*"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/test/.*(Test|Spec))\\.tsx?$",
    "modulePaths": [
      "<rootDir>/node_modules/",
      "<rootDir>/src/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**/*.ts",
      "!**/src/**/*.d.ts"
    ],
    "testResultsProcessor": "./node_modules/jest-junit",
    "testEnvironment": "jsdom"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xcomponent/ReactiveXComponent.js.git"
  },
  "keywords": [
    "xcomponent",
    "api",
    "javascript",
    "websocket"
  ],
  "author": "xcomponent",
  "license": "Apache-2.0",
  "main": "./lib/xcomponentapi",
  "types": "./lib/types/index.d.ts",
  "files": [
    "LICENSE",
    "Readme.md",
    "lib"
  ],
  "bugs": {
    "url": "https://github.com/xcomponent/ReactiveXComponent.js/issues"
  },
  "homepage": "https://github.com/xcomponent/ReactiveXComponent.js#readme",
  "dependencies": {
    "@types/es6-shim": "^0.31.32",
    "@types/jest": "^16.0.1",
    "@types/pako": "^0.2.31",
    "@types/rx": "^4.1.1",
    "@types/websocket": "0.0.32",
    "@types/xml2js": "0.0.32",
    "@types/xmldom": "^0.1.28",
    "atob": "^2.0.3",
    "es6-shim": "^0.35.2",
    "pako": "^1.0.3",
    "rx": "^4.1.0",
    "typescript-collections": "^1.2.3",
    "websocket": "^1.0.23",
    "xml2js": "^0.4.17",
    "xmldom": "^0.1.22"
  },
  "devDependencies": {
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "clean-webpack-plugin": "^0.1.14",
    "compression": "^1.6.2",
    "jest": "^18.1.0",
    "jest-cli": "^18.1.0",
    "jest-junit": "https://github.com/palmerj3/jest-junit.git",
    "mock-socket": "^6.0.4",
    "source-map-loader": "^0.1.5",
    "ts-jest": "^18.0.1",
    "ts-loader": "^1.3.3",
    "tslint": "^4.1.0",
    "tslint-loader": "^3.3.0",
    "typescript": "^2.1.4",
    "webpack": "^1.13.1",
    "webpack-node-externals": "^1.5.4"
  }
}
